<!-- http://demos.themelize.me/flexor/pricing.htm -->

<div class="container">

  <div class="bs-docs-section">
    <div class="page-header">
      <p class="lead">Please choose the plan that best suits your needs!</p>
    </div>
  </div>

  <h1>Our plans</h1>

	<div class="pricing-stack">
    <div class="row">

      <div class="col-lg-4">
        <div class="well pricing well-lg">
          <h3 class="title"><span class="uc">Simple</span><em>Starter</em></h3>
          <p class="price"><span class="currency">$</span> <span class="digits">19.<span>95</span></span> <span class="term">/mo.</span></p>
          <div class="border">
            <ul class="unstyled points">
              <li>2 User Accounts</li>
              <li>10 Freight Offers (per month)</li>
              <li>No Urgent Freight Offer</li>
            </ul>
            <%= link_to "Choose Plan", pricing_confirmed_path(plan: :flex), class: "btn btn-success btn-small"%>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="well well-lg">
          <h3 class="title"><span class="uc">Team</span></h3>
          <p class="price"><span class="currency">$</span> <span class="digits">49.<span>95</span></span> <span class="term">/mo.</span></p>
          <div class="border">
            <ul class="unstyled points">
              <li>5 User Accounts</li>
              <li>50 Freight Offers (per month)</li>
              <li>5 Urgent Freight Offer (per month)</li>
            </ul>
            <%= link_to "Choose Plan", pricing_confirmed_path(plan: :team), class: "btn btn-success btn-small"%>
          </div>
        </div>
      </div>

      <div class="col-lg-4">      
        <div class="well well-lg active">
          <h3 class="title">Enterprise</h3>
          <p class="price"><span class="currency">$</span> <span class="digits">199.<span>95</span></span> <span class="term">/mo.</span></p>
          <div class="border">
            <ul class="unstyled points">
              <li>Unlimited User Accounts</li>
              <li>Unlimited Freight Offers</li>
              <li>25 Urgent Freight Offer (per month)</li>
            </ul>
            <%= link_to "Choose Plan", pricing_confirmed_path(:enterprise), class: "btn btn-primary btn-small"%>
          </div>
        </div>
      </div>  

    </div>    
  </div>

</div>