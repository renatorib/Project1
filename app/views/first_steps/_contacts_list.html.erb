<div id="contacts_list" name="contacts_list" class="container">
  <div class="col-lg-12">
    <% unless @contacts.empty? %> 
      <h4>Contacts list</h4> 
      <table class="table table-striped table-center table-hover">
        <thead>
          <tr >
            <th>Name</th>
            <th>Email</th>
            <th>Celphone</th>          
          </tr>
        </thead>         
        <tbody>
          <% @contacts.each do |contact| %>
            <tr >
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.celphone %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    <% end %>        
  </div>
</div>