<div class="bs-docs-section">
	<div class="row">
		<div name="shipper" id="shipper">

			<h1>Shipper details</h1> 
			<div class="col-lg-6">
				<label>Name</label>
				<input id="name" name="name" type="text" class="form-control" placeholder="Type something…">
			</div>

			<div class="col-lg-6">
				<label>CNPJ</label>
				<input id="cnpj" name="cnpj" type="text" class="form-control" placeholder="00.000.000/0000" style="width: 170px">
			</div>  

			<h3>Address</h3>			
			<div class="col-lg-12">
				<label>CEP</label>
				<input id="cep" name="cep" type="text" class="form-control" placeholder="00000-000" style="width: 120px">
			</div>
			<div class="col-lg-12">
				<label>City</label>
				<%= collection_select(:city, :id, City.all, :id, :name, {}, {class: "form-control", style:"width: 555px"}) %>		
			</div>

			<div class="col-lg-6">
				<label>Address</label>	
				<input id="address" name="address" type="text" class="form-control" placeholder="Type something…">
			</div>
			<div class="col-lg-6">
				<label>Address number</label>	
				<input id="address_number" name="address_number" type="text" class="form-control" placeholder="Type something…" style="width: 160px">
			</div>
			
			<div class="col-lg-6">
				<label>Phone</label>	
				<input id="phone" name="phone" type="text" class="form-control" placeholder="(00) 00000-0000" style="width: 160px">
			</div>
			<div class="col-lg-6">
				<label>Alternative phone</label>	
				<input id="alternative_phone" name="alternative_phone" type="text" class="form-control" placeholder="(00) 00000-0000" style="width: 160px">	
			</div>
		</div>
	</div>
</div>